                            </div>
                        </div>
                       
                        <label for="chuyenmuc">Chọn chuyên mục:</label>

                        <select name="chuyenmuc" id="chuyenmuc">
                        
                            <% user.chuyenmuc.forEach( (e,index) => { %>
                                <option value="<%= e.name %>" ><%= e.name %></option>
                         
                            <% }) %>
                    
                        </select>
                       
                    </form>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button"  id="btn-post-article" class="BtnDang btn btn-primary btn-block my-1 glyphicon-text-size">Đăng</button>
                </div>

            </div>
        </div>
    </div>
    <!-- modal dành cho chỉnh sửa thông báo -->
